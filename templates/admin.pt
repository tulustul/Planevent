<html ng-app="PlanEvent">
<head>
    <title>Plan Event</title>

    <meta charset="utf-8">

    <script type="text/javascript" src="static/vendor.js"></script>

    <script type="text/javascript">
        var planevent = angular.module('PlanEvent',
        ['ui.bootstrap', 'ngAnimate', 'ngRoute', 'ngResource',
        'infinite-scroll', 'angularFileUpload']);
    </script>

    <script type="text/javascript" src="static/app.js"></script>

    <link rel="stylesheet" href="static/vendor.css" />
    <link rel="stylesheet" href="static/main.css" />
</head>
<body ng-controller="AdminPageController">
    <section id="admin-panel">
            <div>
            <label>Vendor id:</label>
            <input placeholder="Vendor id" type="text" ng-model="vendorId" ng-change="getVendor()">
            </div>

        <div ng-show="vendor">

            <label>Vendor:</label>
            <strong>{{ vendor.name }}</strong>

            <label>Promotion value:</label>
            <input type="text" ng-model="vendor.promotion">

            <div class="btn-wrapper"><button class="btn btn-primary" ng-click="savePromotion()">Save promotion</button></div>

            <alert ng-show="saved" type="'success'">Saved</alert>
        </div>

        <alert ng-show="vendorDoesNotExists" type="'danger'">Given vendor does not exists!</alert>

        <alert ng-show="unknownError" type="'danger'">Unknown error</alert>

    </section>
</body>
</html>
